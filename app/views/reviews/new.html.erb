<h1>New Review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :integer, input_html: { min: 0, max: 5 } %>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
<% end %>

<p class="mt-3"><%= link_to "Back", restaurant_path(@restaurant) %></p>
